<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
     	    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_full_holo_dark"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/acct_sel" />

        <TextView
            android:id="@+id/userN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userP"
            android:padding="5dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ics" />

        <TextView
            android:id="@+id/countTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userP"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="/140"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ics" />

        <TextView
            android:id="@+id/myCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/countTotal"
			android:layout_toLeftOf="@+id/countTotal"
            android:paddingBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ics" />

    </RelativeLayout>  
    
   <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">
        
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">       
        	    
   <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    <EditText
        android:id="@+id/editMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:hint="Hello World from TweeZee!" >
    </EditText>


    <ImageView
        android:id="@+id/div5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMessage"
        android:layout_alignParentLeft="true"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />

    <TextView
        android:id="@+id/mentionsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/div5"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Add Mentions"
        android:textAppearance="?android:attr/textAppearanceMedium" />

   	<MultiAutoCompleteTextView 
   	    android:paddingTop="3dp"
		android:id="@+id/mentionsMACTV"
        android:paddingLeft="10dp"
		android:layout_below="@+id/mentionsTv"
        android:focusableInTouchMode="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:hint="Mentions"
		android:completionThreshold="1"
		android:imeOptions="actionDone"/>      
		 
    <ImageView
        android:id="@+id/div4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mentionsMACTV"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />

    <TextView
        android:id="@+id/dayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/div4"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Day Picker"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
	<TextView
        android:id="@+id/day_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dayTv"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="No days selected"
        android:textColor="@color/ics"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/div2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/day_pre"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />
    
    <CheckBox
        android:id="@+id/timeCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div2"
        android:text="Send at specific time" />
         
    <ImageView
        android:id="@+id/div3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timeCB"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />

	<TextView
        android:id="@+id/interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/div3"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Interval"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <EditText
        android:id="@+id/editInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/interval"
        android:hint="Interval (in minutes) between sends."
        android:inputType="number"
        android:paddingTop="3dp"/>
    
    <ImageView
        android:id="@+id/div7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editInterval"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />    

	<TextView
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/div7"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Set Time"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
	
	<TextView
        android:id="@+id/time_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timePicker"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="No time set."
        android:textColor="@color/ics"
        android:textAppearance="?android:attr/textAppearanceSmall" />	
        
    <ImageView
        android:id="@+id/div6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time_pre"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />   
        
    <CheckBox
        android:id="@+id/bootCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div6"
        android:text="Start tweet at boot"/>
        
    <ImageView
        android:id="@+id/div99"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bootCB"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />         
 
</RelativeLayout>  
</ScrollView>

</RelativeLayout>
   
